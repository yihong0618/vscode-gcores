{
	"name": "vscode-gcores",
	"displayName": "vscode-gcores",
	"description": "use vscode to play with gcores",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
        "onCommand:gcores.refreshExplorer",
		"onCommand:gcores.previewArticle",
		"onCommand:gcores.addAuthor",
		"onCommand:gcores.deleteAuthor",
		"onCommand:gcores.pickOne",
		"onView:gcoresExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vscodeGcores",
					"title": "Gcores",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"vscodeGcores": [
				{
					"id": "gcoresExplorer",
					"name": "gcores"
				}
			]
		},
		"menus": {
			"view/title": [
                {
                    "command": "gcores.refreshExplorer",
                    "when": "view == gcoresExplorer",
                    "group": "navigation@0"
                },
                {
                    "command": "gcores.pickOne",
                    "when": "view == gcoresExplorer",
                    "group": "navigation@1"
                },
                {
                    "command": "gcores.addAuthor",
                    "when": "view == gcoresExplorer",
                    "group": "navigation@2"
                }
			],
			"view/item/context": [
				{
					"command": "gcores.previewArticle",
					"when": "view == gcoresExplorer && viewItem == see",
					"group": "gcores@1"
				}
			]
		},
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "gcores.previewArticle",
				"title": "Preview Article",
				"category": "Gcores"
			},
			{
				"command": "gcores.addAuthor",
				"title": "Add Author",
				"category": "Gcores",
				"icon": {
                    "light": "resources/light/add-author.svg",
                    "dark": "resources/dark/add-author.svg"
                }
			},
			{
				"command": "gcores.deleteAuthor",
				"title": "Delete Author",
				"category": "Gcores"
			},
			{
				"command": "gcores.pickOne",
				"title": "Pick One",
				"category": "Gcores",
				"icon": {
                    "light": "resources/light/dice.svg",
                    "dark": "resources/dark/dice.svg"
                }
			},
			{
				"command": "gcores.refreshExplorer",
				"title": "Refresh",
				"category": "Gcores",
				"icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"lint": "tslint --project tsconfig.json -e src/*.d.ts -t verbose"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/markdown-it": "0.0.9",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"axios": "^0.19.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"markdown-it": "^10.0.0"
	}
}
